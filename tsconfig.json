{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ES2016"
    ],
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}